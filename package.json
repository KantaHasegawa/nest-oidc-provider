{
  "name": "nest-oidc-provider",
  "version": "1.0.1",
  "description": "oidc-provider module for Nest framework (node.js)",
  "author": "Adrian Cerbaro <adriancerbaro@gmail.com>",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/adrianbrs/nest-oidc-provider"
  },
  "scripts": {
    "build": "rimraf -rf dist && tsc -p tsconfig.json",
    "format": "prettier --write \"{lib,tests}/**/*.ts\"",
    "lint": "eslint 'lib/**/*.ts' --fix",
    "precommit": "lint-staged",
    "prepublish:npm": "npm run build",
    "publish:npm": "npm publish --access public",
    "prepublish:next": "npm run build",
    "publish:next": "npm publish --access public --tag next",
    "prerelease": "npm run build",
    "release": "release-it",
    "test:e2e": "jest --config ./tests/jest-e2e.json --runInBand",
    "test:e2e:dev": "jest --config ./tests/jest-e2e.json --runInBand --watch"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-angular": "^16.0.0",
    "@nestjs/common": "^8.2.6",
    "@nestjs/core": "^8.2.6",
    "@nestjs/platform-express": "^8.2.6",
    "@nestjs/testing": "^8.2.6",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.14",
    "@types/oidc-provider": "^7.8.1",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "body-parser": "^1.19.1",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "express": "^4.17.2",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lint-staged": "^12.3.2",
    "oidc-provider": "^7.10.6",
    "prettier": "^2.5.1",
    "reflect-metadata": "^0.1.13",
    "release-it": "^14.12.4",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5"
  },
  "peerDependencies": {
    "@nestjs/common": "^7.0.0 || ^8.0.0",
    "@nestjs/core": "^8.2.6",
    "oidc-provider": "^7.10.6",
    "reflect-metadata": "^0.1.13"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -c .commitlintrc.json -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "bugs": {
    "url": "https://github.com/adrianbrs/nest-oidc-provider/issues"
  },
  "homepage": "https://github.com/adrianbrs/nest-oidc-provider#readme"
}
